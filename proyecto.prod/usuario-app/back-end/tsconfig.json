{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],

    "baseUrl": ".",              // ⬅️ importa
    "paths": {                   // ⬅️ importa
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
